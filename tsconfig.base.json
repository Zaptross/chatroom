{
    "exclude": ["node_modules"],
    "include": ["src/*.ts"],
    "references": [
        { "path": "./backend/tsconfig.json" },
        { "path": "./frontend/tsconfig.json" },
        { "path": "./contracts/tsconfig.json" }
    ],
    "compilerOptions": {
        "lib": ["es2021"],
        "module": "commonjs",
        "target": "es2021",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        // Build options
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    }
}
